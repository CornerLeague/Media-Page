# Corner League Media API Environment Configuration

# Application Settings
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=Corner League Media API
VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings
FRONTEND_URL=http://localhost:8080
BACKEND_CORS_ORIGINS=http://localhost:8080,http://localhost:3000,http://127.0.0.1:8080,http://127.0.0.1:3000

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_JWT_ISSUER=https://clerk.dev

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API Configuration
API_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s