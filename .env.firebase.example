# Firebase Configuration for Corner League Media
# Copy these values to your .env file and replace with your actual Firebase project values

# Firebase Web App Configuration
# Get these values from: Firebase Console -> Project Settings -> General -> Your apps -> Web app config
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Optional: Firebase Emulator (for local development)
VITE_FIREBASE_USE_EMULATOR=false

# Firebase Emulator Ports (for local development)
# Default ports: Auth=9099, Firestore=8080, Functions=5001, Storage=9199
VITE_FIREBASE_AUTH_EMULATOR_PORT=9099
VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080

# Backend API Configuration
VITE_API_URL=http://localhost:8000

# Test Mode (for E2E tests)
VITE_TEST_MODE=false