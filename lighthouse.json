{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:8080/",
        "http://localhost:8080/onboarding/step/1",
        "http://localhost:8080/onboarding/step/2",
        "http://localhost:8080/onboarding/step/3",
        "http://localhost:8080/onboarding/step/4",
        "http://localhost:8080/onboarding/step/5"
      ],
      "startServerCommand": "npm run dev",
      "startServerReadyPattern": "Local:.*:8080",
      "startServerReadyTimeout": 60000,
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage",
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 0,
          "uploadThroughputKbps": 0
        },
        "auditMode": false,
        "gatherMode": false,
        "disableStorageReset": false,
        "emulatedFormFactor": "desktop",
        "internalDisableDeviceScreenEmulation": false,
        "channel": "cli"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.8}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.8}],
        "categories:pwa": ["warn", {"minScore": 0.6}],

        "first-contentful-paint": ["warn", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 3000}],
        "first-meaningful-paint": ["warn", {"maxNumericValue": 2500}],
        "speed-index": ["warn", {"maxNumericValue": 3000}],
        "interactive": ["error", {"maxNumericValue": 5000}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],

        "color-contrast": "error",
        "heading-order": "error",
        "aria-valid-attr": "error",
        "aria-valid-attr-value": "error",
        "button-name": "error",
        "bypass": "error",
        "focus-traps": "error",
        "focusable-controls": "error",
        "interactive-element-affordance": "error",
        "keyboard": "error",
        "link-name": "error",
        "managed-focus": "error",
        "use-landmarks": "error",

        "unused-javascript": ["warn", {"maxNumericValue": 20}],
        "unused-css-rules": ["warn", {"maxNumericValue": 20}],
        "modern-image-formats": "warn",
        "uses-optimized-images": "warn",
        "uses-webp-images": "warn",
        "efficient-animated-content": "warn",
        "uses-responsive-images": "warn",

        "uses-https": "error",
        "uses-http2": "warn",
        "no-vulnerable-libraries": "error",
        "charset": "error",
        "viewport": "error"
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "githubAppToken": "${LHCI_GITHUB_APP_TOKEN}",
      "githubToken": "${GITHUB_TOKEN}",
      "githubApiHost": "https://api.github.com",
      "githubStatusContextSuffix": "/onboarding"
    },
    "server": {
      "port": 9001,
      "storage": {
        "storageMethod": "sql",
        "sqlDialect": "sqlite",
        "sqlDatabasePath": "./lhci.db"
      }
    },
    "wizard": {
      "preset": "lighthouse:default"
    }
  }
}